{
// Enforcing
    "bitwise": true,
    "curly": true, 
    "eqeqeq": true, 
    "immed": true,
    "latedef": "nofunc", 
    "newcap": true, 
    "noarg": true,
    "nonew": true,
    "undef": true,
    "strict": true, 
    "trailing": true,
    // Props not included in Tonic's at all
    "camelcase": true,
    "freeze": true,
    "unused": "vars",
// Relaxing
    "smarttabs": true,
    "supernew": true,  
    "validthis": true,
// Environment
    "browser": true,
    "node": true,
    "jquery": true,
// Formatting
    "indent": 4,
    // Guidelines we want, but don't want jshint to enforce
//  "maxcomplexity": //something TBD,
//  "maxstatements": 40 standard, don't enforce, intentional exceptions are okay
//  "maxlen": 120 standard, don't enforce, intentional exceptions are okay
    "globals": {
        "WidgetTodo": true,
        "jQuery": true,
        "Ember": true,
        "Handlebars": true,
        "DS": true
    }
}
